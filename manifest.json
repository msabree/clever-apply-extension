{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Resume Tailor",
    "description": "Resume Tailor uses Google Gemini to customize your resume for any job description. It automatically generates a personalized CV and populates application fields, saving you time and effort.",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Resume Tailor",
        "default_icon": {
            "16": "icons/16x16.png",
            "48": "icons/48x48.png",
            "128": "icons/128x128.png"
        }
    },
    "icons": {
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["js/contentScript.js"]
        }
    ]
}