{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Clever Apply",
    "description": "Clever Apply leverages Google Gemini to tailor your resume to match any job description. It auto-generates a customized CV and even populates application fields for you.",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Clever Apply",
        "default_icon": {
            "16": "icons/16x16.png",
            "48": "icons/48x48.png",
            "128": "icons/128x128.png"
        }
    },
    "icons": {
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["https://*.com/*"],
          "js": ["js/contentScript.js"]
        }
    ]
}